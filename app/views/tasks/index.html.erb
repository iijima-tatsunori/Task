<%= provide(:title, "Task index") %>

<h1>タスク一覧</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "タスク新規作成", new_user_task_path, class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <th>名称</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>
      <% @tasks.each do |task| %>
      <tbody>
        <tr>
          <td>
            <%= link_to task.name, user_task_path(@user, task) %>
          </td>
          <td>
            <%= task.created_at %>
          </td>
          <td>
            <%= link_to "編集", edit_user_task_path(@user, task.id), class: "btn btn-success" %>
            <%= link_to "削除", user_task_path(@user, task.id), method: :delete, data: { confirm: "#{task.name}を削除しますか?" }, class: "btn btn-danger" %>
          </td>  
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>