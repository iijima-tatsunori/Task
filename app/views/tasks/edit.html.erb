<%= provide(:title, "edit") %>

<h1>タスク編集</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user, @task), method: :patch, local: true) do |f| %>
    <%= render 'shared/error_messages' %>
    
    <%= f.label :name, class: "label-control" %>
    <%= f.text_field :name, class: "form-control" %>
    
    <%= f.label :discription, class: "label-control" %>
    <%= f.text_area :discription, class: "form-control", rows: "5" %>
    
    <%= f.submit "編集", class: "btn btn-primary btn-form" %>
    <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-form" %>
    
    <% end %>
  </div>
</div>