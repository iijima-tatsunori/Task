<%= provide(:title, "show") %>

<h1>タスク詳細</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="table-task">
      <tbody>
        <tr>
          <th class="active col-md-2">ID</th>
          <td class="col-md-10"><%= @task.id %></td>
        </tr>
        <tr>
          <th class="active">名称</th>
          <td class="col-md-10"><%= @task.name %></td>
        </tr>
        <tr>
          <th class="active col-md-2">詳細</th>
          <td class="col-md-10"><%= Rinku.auto_link(@task.discription, :all, 'target="_blank"').html_safe %></td>
        </tr>
         <tr>
          <th class="active col-md-2">作成日</th>
          <td class="col-md-10"><%= @task.created_at %></td>
        </tr>
         <tr>
          <th class="active col-md-2">更新日</th>
          <td class="col-md-10"><%= @task.updated_at %></td>
        </tr>
      </tbody>
    </table>
    <div>
      <%= link_to "編集", edit_user_task_path, class: "btn btn-success btn-lg" %>
      <%= link_to "削除", user_task_path, method: :delete, class: "btn btn-danger btn-lg" %>
    </div>
  </div>
</div>