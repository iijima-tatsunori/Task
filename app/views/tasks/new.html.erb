<%= provide(:title, "index") %>

<h1>タスク新規作成</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
    <%= render 'shared/error_messages' %>
    
    <%= f.label :name, class: "label-control" %>
    <%= f.text_field :name, class: "form-control" %>
    
    <%= f.label :discription, class: "label-control" %>
    <%= f.text_area :discription, class: "form-control", rows: "5" %>
    
    <%= f.submit "新規作成", class: "btn btn-primary btn-lg btn-form" %>
    
    <% end %>
  </div>
</div>